<!DOCTYPE html>
<html lang="en">
<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
</head>
<body>

<input type="text" placeholder="Income" id="income" ><br>
<input type="submit" value="Calculate" id="submit"><br>
<div id="tax">  </div>
<br>

<a href="<%='http://localhost:3000/calculate' %>">Back</a>
 
</body>
</html>

<script>

$(document).ready(function(){
    $("#submit").click(function(){
        var income=$('#income').val();
		
		var tax_amount=0;
		
				
	if (income>500000)
	{
		tax_amount=((income-500000)*0.2)+(250000*0.1)
	}
	else if ( income>250000 && income <=500000)
	{
			tax_amount=(income-250000)*0.1
	}
	
	$('#tax').empty().text('Income tax Rs: '+tax_amount);
		//alert(income);
		//alert(tax_amount);
    });
});



</script>
